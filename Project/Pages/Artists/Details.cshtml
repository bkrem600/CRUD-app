@page
@model Project.Pages.ArtistDetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Artist Details - " + Model.Artist.Name;
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Artist Details</title>
    </head>
    <h2>Artist Details</h2>
    <hr />
    <div>
        <dl class="dl-horizontal">
            <dt>Artist ID</dt>
            <dd>@Html.DisplayFor(model => model.Artist.ArtistId)</dd>
            <dt>Name</dt>
            <dd>@Html.DisplayFor(model => model.Artist.Name)</dd>
            <dt>Albums</dt>
            <dd>
                <table class="table">
                    @foreach (var item in Model.Artist.Albums)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                        </tr>
                    }
                </table>
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</html>
    




