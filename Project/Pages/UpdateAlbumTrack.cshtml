@page
@model Project.Pages.UpdateTrackModel
@{
    ViewData["Title"] = "Update Track - " + Model.Track.Name;
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Update Track</title>
    </head>
    <h4>Update a Track</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Track.TrackId" />
                <div class="form-group">
                    <label asp-for="Track.TrackId" class="control-label"></label>
                    <div>@Html.DisplayFor(model => model.Track.TrackId)</div>
                </div>
                <div class="form-group">
                    <label asp-for="Track.Name" class="control-label"></label>
                    <input asp-for="Track.Name" class="form-control" />
                    <span asp-validation-for="Track.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Track.Album" class="control-label"></label>
                    <select asp-for="Track.AlbumId" class="form-control" asp-items="@Model.AlbumTitleSL">
                        <option value="">-- Select Album Title --</option>
                    </select>
                    <span asp-validation-for="Track.AlbumId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Track.Media_Type" class="control-label"></label>
                    <select asp-for="Track.MediaTypeId" class="form-control" asp-items="@Model.MediaTypeNameSL">
                        <option value="">-- Select Media Type --</option>
                    </select>
                    <span asp-validation-for="Track.MediaTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Track.Genre" class="control-label"></label>
                    <select asp-for="Track.GenreId" class="form-control" asp-items="@Model.GenreNameSL">
                        <option value="">-- Select Genre --</option>
                    </select>
                    <span asp-validation-for="Track.GenreId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Track.Composer" class="control-label">Enter Composer(s):&nbsp;</label>
                    <input asp-for="Track.Composer" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Track.Milliseconds" class="control-label">Enter Milliseconds:&nbsp;</label>
                    <input asp-for="Track.Milliseconds" type="number" min="1" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Track.Bytes" class="control-label">Enter Bytes:&nbsp;</label>
                    <input asp-for="Track.Bytes" type="number" min="1" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Track.UnitPrice" class="control-label">Enter Unit Price:&nbsp;</label>
                    <input asp-for="Track.UnitPrice" class="form-control" type="number" min="0.00" 
                    max="100.00" step="0.01" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</html>
