@page
@using UWS.Shared
@model Project.Pages.MediaTypesModel
@{
    ViewData["Title"] = "Media Types";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Media Types</title>
  </head>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="../Index">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="../Albums/Index">Albums</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="../Artists/Index">Artists</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="../Tracks/Index">Tracks</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="../MediaTypes/Index">Media Types</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="../Genres/Index">Genres</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <h2 class="display-2">Media Types</h2>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>Media Type ID</th>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model.MediaTypes)
        {
          <tr>
            <td>@item.MediaTypeId</td>
            <td>@item.Name</td>
          </tr>  
        }
      </tbody>
    </table>
  </div>
</html>