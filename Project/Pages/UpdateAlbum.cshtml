@page
@using UWS.Shared
@model Project.Pages.UpdateAlbumModel
@{
    ViewData["Title"] = "Update Album - " + Model.Album.Title;
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Update Album</title>
    </head>
    <h4>Update an Album</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Album.AlbumId" />
                <div class="form-group">
                    <label asp-for="Album.AlbumId" class="control-label"></label>
                    <div>@Html.DisplayFor(model => model.Album.AlbumId)</div>
                </div>
                <div class="form-group">
                    <label asp-for="Album.Title" class="control-label"></label>
                    <input asp-for="Album.Title" class="form-control" />
                    <span asp-validation-for="Album.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Album.Artist" class="control-label"></label>
                    <select asp-for="Album.ArtistId" class="form-control" asp-items="@Model.ArtistNameSL">
                        <option value="">-- Select Artist Name --</option>
                    </select>
                    <span asp-validation-for="Album.ArtistId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    
    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</html>
